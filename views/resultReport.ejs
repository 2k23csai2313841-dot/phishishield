                                    <% } else if (history.result === 'Suspicious') { %>
                                        <div class="rec-card warning">
                                            <div class="rec-icon">‚ö†Ô∏è</div>
                                            <div class="rec-content">
                                                <div class="rec-title">Exercise Caution</div>
                                                <div class="rec-text">Be careful when visiting this URL and verify its legitimacy before proceeding</div>
                                            </div>
                                        </div>
                                        <div class="rec-card warning">
                                            <div class="rec-icon">üîç</div>
                                            <div class="rec-content">
